{
  "name": "restaurantto-app",
  "version": "2.0.1",
  "description": "Restaurantto App - Front-end System",
  "type": "module",
  "private": true,
  "scripts": {
    "ng": "ng",
    "dev": "ng serve",
    "dev:host": "ng serve --host 0.0.0.0 --disable-host-check",
    "clean": "rm -rf dist",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:e2e": "cypress open",
    "test:headless": "ng test --watch=false --browsers ChromeHeadless",
    "lint": "eslint .",
    "lint:staged": "npm run lint-staged",
    "prettier": "prettier --write src/**/*.{ts,js,css,html}"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier --staged && ng lint && npm test",
      "pre-push": "ng build --aot true"
    }
  },
  "dependencies": {
