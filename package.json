{
  "name": "restaurantto-app",
  "version": "3.0.4",
  "description": "Restaurantto App - Front-end System",
  "type": "module",
  "private": true,
  "scripts": {
    "ng": "ng",
    "dev": "ng serve",
    "dev:host": "ng serve --host 0.0.0.0 --disable-host-check",
    "clean": "rm -rf dist",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:e2e": "cypress open",
    "test:headless": "ng test --watch=false --browsers ChromeHeadless",
    "lint": "eslint .",
    "lint:staged": "npm run lint-staged",
    "prettier": "prettier --write src/**/*.{ts,js,css,html}",
    "prepare": "husky install"
  },
  "dependencies": {
    "@angular/animations": "^18.2.11",
    "@angular/common": "^18.2.11",
    "@angular/compiler": "^18.2.11",
    "@angular/core": "^18.2.11",
    "@angular/forms": "^18.2.11",
    "@angular/platform-browser": "^18.2.11",
    "@angular/platform-browser-dynamic": "^18.2.11",
    "@angular/router": "^18.2.11",
    "angular-split": "^18.0.0-beta.1",
    "apexcharts": "^3.54.1",
    "axios": "^1.7.7",
    "dotenv": "^16.4.5",
    "flowbite": "^2.5.2",
    "jspdf": "^2.5.2",
    "ngx-toastr": "^19.0.0",
    "restaurantto-app": "file:",
    "rxjs": "~7.8.1",
    "tslib": "^2.8.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.2.11",
    "@angular-eslint/builder": "18.4.0",
    "@angular-eslint/eslint-plugin": "18.4.0",
    "@angular-eslint/eslint-plugin-template": "18.4.0",
    "@angular-eslint/schematics": "18.4.0",
    "@angular-eslint/template-parser": "18.4.0",
    "@angular/cli": "~18.2.11",
    "@angular/compiler-cli": "^18.2.11",
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.12.0",
    "@iconify/json": "^2.2.260",
    "@iconify/tailwind": "^1.1.3",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/typography": "^0.5.15",
    "@types/jasmine": "~5.1.4",
    "@types/node": "^22.7.5",
    "@typescript-eslint/eslint-plugin": "8.9.0",
    "@typescript-eslint/parser": "8.9.0",
    "@typescript-eslint/utils": "^8.14.0",
    "autoprefixer": "^10.4.20",
    "cypress": "^13.15.0",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^8.0.3",
    "jasmine-core": "~5.4.0",
    "karma": "^6.4.4",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "^5.1.0",
    "karma-jasmine-html-reporter": "^2.1.0",
    "lint-staged": "^15.2.10",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "prettier-eslint": "^16.3.0",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "simple-git-hooks": "^2.11.1",
    "stylelint": "^14.16.1",
    "tailwindcss": "^3.4.14",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^5.5.4"
  },
  "packageManager": "npm@10.9.0",
  "lint-staged": {
    "*.{ts,html}": [
      "prettier --write",
      "eslint --max-warnings 0 . --no-warn-ignored"
    ]
  },
  "eslintConfig": {
    "rules": {
      "no-unused-vars": 0,
      "@typescript-eslint/no-unused-vars": 0
    }
  }
}
